<theme>

    <formatVersion>7</formatVersion>
    <include>./../theme.xml</include>
	
	
	<view name="system">
	
		<text name="systemName" extra="true">
			<text>Sega Model 2</text>
			<pos>0.03 0.025</pos>
			<size>0.42 0.3</size>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Black.ttf</fontPath>
			<fontSize>0.116</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>				
		
		<text name="systemYear" extra="true">
			<text>Sega, 1993</text>
			<pos>0.03 0.33</pos>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Bold.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>						
		
		<text name="systemtxt" extra="true">
			<text>The Sega Model 2 is an arcade system board first released in 1993 as a successor to the Sega Model 1 board. Sega Model 2 was the starting point of several popular arcade games and series such as Daytona USA, Dead Or Alive, Sega Rally, House of the Dead and Virtua Cop. It had an Intel i960-KB CPU at 25 MHz with 9776KB of RAM.</text>
			<pos>0.03 0.39</pos>
			<size>0.42 0.3</size>			
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Regular.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<lineSpacing>0.89</lineSpacing>
			<alignment>left</alignment>
		</text>		
		
	</view>			

	<view name="detailed">
			
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${model3Color}</color>
			<colorEnd>${model3ColorB}</colorEnd>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>

		<image name="syscolorbar" extra="true">
			<path>./../_inc/images/syscolorbar.png</path>
			<color>${model3Color}</color>
			<colorEnd>${model3ColorB}</colorEnd>
			<pos>0.32 0.04</pos>
		</image>		

	</view>

	<view name="grid">
			
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${model3Color}</color>
			<colorEnd>${model3ColorB}</colorEnd>
			<pos>0.53 0.5</pos>
			<size>0.97 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>
				
		
	</view>

	<view name="basic">
	
		<image name="basicgamelistbg" extra="true">
			<color>${model3Color}</color>
			<colorEnd>${model3ColorB}</colorEnd>
		</image>		
		
	</view>


</theme>
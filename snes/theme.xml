<theme>

    <formatVersion>7</formatVersion>
    <include>./../theme.xml</include>
	
	
	<view name="system">
	
		<text name="systemName" extra="true">
			<text>Super Nintendo Entertainment System</text>
			<pos>0.03 0.025</pos>
			<size>0.42 0.3</size>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Black.ttf</fontPath>
			<fontSize>0.083</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>				
		
		<text name="systemYear" extra="true">
			<text>Nintendo, 1990</text>
			<pos>0.03 0.33</pos>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Bold.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>						
		
		<text name="systemtxt" extra="true">
			<text>The Super Nintendo Entertainment System (often shortened to SNES or Super NES) is a 16-bit video game console created by Nintendo, released first in 1990. It is the sucessor to the NES. It was called the Super Famicom in Japan, and the Super Comboy in South Korea. The console can display 2D graphics, with some limited support for 3D graphics with the Super FX chip. Super NES games are loaded from a cartridge. The major competitor for the Super Nintendo was the Sega Genesis/Mega Drive, but it also competed with the Panasonic 3D0.</text>
			<pos>0.03 0.39</pos>
			<size>0.42 0.3</size>			
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Regular.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<lineSpacing>0.89</lineSpacing>
			<alignment>left</alignment>
		</text>		
		
	</view>			

	<view name="detailed">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${snesColor}</color>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>

		<image name="syscolorbar" extra="true">
			<path>./../_inc/images/syscolorbar.png</path>
			<color>${snesColor}</color>
			<pos>0.32 0.04</pos>
		</image>		

	</view>

	<view name="grid">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${snesColor}</color>
			<pos>0.53 0.5</pos>
			<size>0.97 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>
		
		<text name="md_name">
			<color>FFFFFF</color>
		</text>
		
		<text name="md_description">
			<color>ffffff</color>
		</text>				

	</view>

	<view name="basic">
	
		<image name="basicgamelistbg" extra="true">
			<color>${snesColor}</color>
		</image>		
		
	</view>


</theme>
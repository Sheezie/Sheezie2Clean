<theme>

    <formatVersion>7</formatVersion>
    <include>./../theme.xml</include>
	
	
	<view name="system">
	
		<text name="systemName" extra="true">
			<text>V.Smile</text>
			<pos>0.03 0.025</pos>
			<size>0.42 0.3</size>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Black.ttf</fontPath>
			<fontSize>0.116</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>				
		
		<text name="systemYear" extra="true">
			<text>VTech, 2004</text>
			<pos>0.03 0.33</pos>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Bold.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>						
		
		<text name="systemtxt" extra="true">
			<text>The V.Smile (stylized as V.SMILE TV LEARNING SYSTEM) is a sixth-generation educational home video game console manufactured and released by VTech. Titles are available on ROM cartridges called "Smartridges", to play off the system's educational nature. The graphics are primarily sprite-based. Several variants of the V.Smile console are sold including handheld versions, or models with added functionality such as touch tablet integrated controllers or microphones.</text>
			<pos>0.03 0.39</pos>
			<size>0.42 0.3</size>			
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Regular.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<lineSpacing>0.89</lineSpacing>
			<alignment>left</alignment>
		</text>		
		
	</view>			

	<view name="detailed">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${dcColor}</color>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>

		<image name="syscolorbar" extra="true">
			<path>./../_inc/images/syscolorbar.png</path>
			<color>${dcColor}</color>
			<pos>0.32 0.04</pos>
		</image>		

	</view>
	
	<view name="grid">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${dcColor}</color>
			<pos>0.53 0.5</pos>
			<size>0.97 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>	

	</view>

	<view name="basic">
	
		<image name="basicgamelistbg" extra="true">
			<color>${dcColor}</color>	
		</image>		
		
	</view>


</theme>
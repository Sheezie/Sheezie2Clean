<theme>

    <formatVersion>7</formatVersion>
    <include>./../theme.xml</include>
	
	
	<view name="system">
	
		<text name="systemName" extra="true">
			<text>Game & Watch</text>
			<pos>0.03 0.025</pos>
			<size>0.42 0.3</size>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Black.ttf</fontPath>
			<fontSize>0.116</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>				
		
		<text name="systemYear" extra="true">
			<text>Nintendo R&D1, 1980</text>
			<pos>0.03 0.33</pos>
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Bold.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<lineSpacing>0.69</lineSpacing>
			<alignment>left</alignment>
		</text>						
		
		<text name="systemtxt" extra="true">
			<text>The Game & Watch is a series of handheld electronic games developed, manufactured, released, and marketed by Nintendo from 1980 to 1991. Created by game designer Gunpei Yokoi, the product derived its name from it featuring a single game as well as a clock on an LCD screen. The series sold a combined 43.4 million units worldwide, including 12.87 million units in Japan and 30.53 million overseas. It was the earliest Nintendo video game product to gain major worldwide success.</text>
			<pos>0.03 0.39</pos>
			<size>0.42 0.3</size>			
			<backgroundColor>22222200</backgroundColor>
			<fontPath>./../_inc/fonts/FiraSans-Regular.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<lineSpacing>0.89</lineSpacing>
			<alignment>left</alignment>
		</text>		
		
	</view>			

	<view name="detailed">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${gamewatchColor}</color>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>

		<image name="syscolorbar" extra="true">
			<path>./../_inc/images/syscolorbar.png</path>
			<color>${gamewatchColor}</color>
			<pos>0.32 0.04</pos>
		</image>		
		
		<textlist name="gamelist">
			<primaryColor>FFFFFF</primaryColor>
		</textlist>				

	</view>

	<view name="grid">
	
		<image name="logo">
			<path>./logo2.png</path>
			<pos>0.92 0.048</pos>
			<maxSize>0.1 0.045</maxSize>
			<origin>0.5 0.5</origin>
		</image>	
		
		<image name="gamelistbg" extra="true">
			<path>./../_inc/images/whitebgside.png</path>
			<color>${gamewatchColor}</color>
			<pos>0.53 0.5</pos>
			<size>0.97 1</size>
			<origin>0.5 0.5</origin>
			<zIndex>2</zIndex>
		</image>
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_gametime">
			<color>ffffff</color>
		</text>
		
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_gametime">
			<color>ffffff</color>
		</text>
		
		<datetime name="md_releasedate, md_lastplayed">
			<color>ffffff</color>
		</datetime>		
		
		<rating name="md_rating">
			<color>ffffff</color>
		</rating>			
		
		<text name="md_name">
			<color>ffffff</color>
		</text>
		
		<text name="md_description">
			<color>ffffff</color>
		</text>			
		
	</view>

	<view name="basic">
	
		<image name="basicgamelistbg" extra="true">
			<color>${gamewatchColor}</color>	
		</image>		
		
		<textlist name="gamelist">
			<primaryColor>FFFFFF</primaryColor>
		</textlist>		
		
	</view>


</theme>